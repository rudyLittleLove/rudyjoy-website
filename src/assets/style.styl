#app
  background-image linear-gradient(90deg, #ffffff 0%, #000000 100%), linear-gradient(0deg, #000000 0%, #ffffff 100%), linear-gradient(-90deg, #ffffff 0%, #000000 100%), linear-gradient(0deg, #ffffff 0%, #000000 100%)
  background-repeat no-repeat, no-repeat, no-repeat, no-repeat
  background-size 100px 1px, 1px 100px, 100px 1px, 1px 100px
  background-position -50px 1px, calc(100% - 1px) -100px, calc(100% + 100px) calc(100% - 1px), 1px -50px
  animation moveLine 8s infinite linear

@keyframes moveLine
  0%
    background-position -50px 1px, calc(100% - 1px) -100px, calc(100% + 100px) calc(100% + 1px), 1px -50px
  2%
    background-position 0px 1px, calc(100% - 1px) -100px, calc(100% + 100px) calc(100% - 1px), 1px -100px
  30%
    background-position calc(100% + 50px) 1px, calc(100% - 1px) -50px, calc(100% + 100px) calc(100% - 1px), -1px -100px
  32%
    background-position calc(100% + 100px) 1px, calc(100% - 1px) 0px, calc(100% + 100px) calc(100% - 1px), -1px calc(100% + 100px)
  50%
    background-position calc(100% + 100px) -1px, calc(100% - 1px) calc(100% + 50px), calc(100% + 50px) calc(100% - 1px), 1px calc(100% + 100px)
  52%
    background-position -100px -1px, calc(100% - 1px) calc(100% + 100px), 100% calc(100% - 1px), 1px calc(100% + 100px)
  80%
    background-position -100px 1px, calc(100% + 1px) calc(100% + 100px), -50px calc(100% - 1px), 1px calc(100% + 50px)
  82%
    background-position -100px 1px, calc(100% + 1px) -100px, -100px calc(100% - 1px), 1px 100%
  100%
    background-position -50px 1px, calc(100% - 1px) -100px, -100px calc(100% + 1px), 1px -50px
